#root {
  max-width: 1280px;
  margin: 0 auto;
  padding: 2rem;
  text-align: center;
}

.topnav {
background-color: #333;
overflow: hidden;
position: fixed;
top: 0;
left: 0;
width: 100%
}

.topnav a {
display: inline-block;
text-align: center;
padding: 1em;
font-size: 18px;
color: #F5FEFD
}

.icon {
  height: 7em;
  padding: 1.5em;
  transition: filter 300ms;
}
.logo:hover {
  filter: drop-shadow(0 0 2em #646cffaa);
}
.logo.react:hover {
  filter: drop-shadow(0 0 2em #61dafbaa);
}

@media (prefers-reduced-motion: no-preference) {
  a:nth-of-type(2) .logo {
    animation: logo-spin infinite 20s linear;
  }
}

.card {
  padding: 4em;
}

